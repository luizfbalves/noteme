generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?
  posts Note[]

  @@map("users")
}

model Note {
  id          String   @id @default(uuid())
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  author      User?    @relation(fields: [userId], references: [id])
  userId      String

  @@map("notes")
}
