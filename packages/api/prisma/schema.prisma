
generator client {
  provider = "prisma-client-js"  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @default(uuid()) @id
  email String  @unique
  name  String?
  posts Note[]

  @@map("users")
}

model Note {
  id          String   @default(uuid()) @id
  description String  
  createdAt   DateTime @default(now())
  updatedAt   DateTime 
  author      User?    @relation(fields: [userId], references: [id])
  userId      String

  @@map("notes")
}