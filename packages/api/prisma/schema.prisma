generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  notes     note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("users")
}

model note {
  id          String   @id @default(uuid())
  description String?
  users       user     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  @@map("notes")
}
